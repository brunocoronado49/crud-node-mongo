<div class="row">
    {{#each notes }}
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between align-items-center">
                    {{ title }}
                </h4>
                <p>{{ description }}</p>
                <form action="/notes/delete/{{ _id }}?_method=DELETE" method="post">
                    <input type="hidden" name="_method" value="DELETE">
                    <button class="btn btn-danger" type="submit">Delete</button>
                </form>
                <br>
                <a class="btn btn-warning" href="/notes/editNotes/{{ _id }}">Update</a>
            </div>
        </div>
    </div>
    {{else}}
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-header">
                <center>
                    <h3>Hi! {{ user.name }}!</h3>
                    <h6 class="lead">Don't have notes yet.</h6>
                    <div class="d-grid gap-2 col-6 mx-auto">
                        <a href="/notes/createNotes" class="btn btn-success">Add note</a>
                    </div>
                </center>
            </div>
        </div>
    </div>
    {{/each}}
</div>